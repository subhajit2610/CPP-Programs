#include<iostream>
using namespace std;
class vector{
    public:
    int n;
    float *vect = new(nothrow) float[n];
    void create();
    void modify();
    void multiply();
    void display();
};
void vector::create(){
    cout<<"\nEnter Size of Float Vector Series - "<<endl;
    cin>>n;
    if (!vect)  
        cout<< "Memory Allocation Falied \n";  
    else {
        for(int i=0; i<n; i++){
        cout<<"Enter Position "<<i+1<<" value - ";
        cin>>vect[i];
    }
    } 
}
void vector::modify(){
    cout<<"\nTo modify vector elements enter new size of Vector - ";
    cin>>n;
    if (!vect)  
        cout<< "Memory Allocation Falied \n";  
    else {
    for(int i=0; i<n; i++){
        cout<<"Enter Position "<<i+1<<" value - ";
        cin>>vect[i];
    }
    }
}
void vector::multiply(){
    int num;
    cout<<"\nEnter A Scalar Value To Multiply With Vector - ";
    cin>>num;
    for(int i=0; i<n; i++){
        cout<<"Multiplied value of "<<i+1<<" is >> "<<vect[i]*float(num)<<endl;
    }
}
void vector::display(){
    cout<<"\nLast Updated Vector Values - \n------------------------------- "<<endl;
    for(int i=0; i<n; i++){
        cout<<"Position "<<i+1<<" Value is "<<vect[i]<<endl;
    }
    delete []vect;
}
int main(){
    vector A;
    A.create();
    A.modify();
    A.multiply();
    A.display();
    return 0;
}
